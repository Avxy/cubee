<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="@color/defaultBackground"
    tools:context="com.lacina.cubeeclient.fragments.CubeeGridFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical"
        android:weightSum="14">


        <TextView
            android:id="@+id/tv_alert_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Você não tem nenhum CUBEE cadastrado."
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:visibility="gone"/>


        <GridView
            android:id="@+id/gridviewcubees"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:numColumns="3">
        </GridView>


        <LinearLayout
            android:id="@+id/ln_buttons_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btm_save_filter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:text="Filtrar" />

            <Button
                android:id="@+id/btm_cancel_filter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:text="Cancelar" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
