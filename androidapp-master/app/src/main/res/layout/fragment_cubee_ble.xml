<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/cubee_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="18dp"
                app:srcCompat="@mipmap/ic_bigcubee" />


            <TextView
                android:id="@+id/tv_characteristic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="CUBEE"
                android:textColor="@color/btn_inactive"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_relay_onoff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/deactivated"
                android:textSize="20sp"
                android:layout_margin="30dp"
                android:background="@mipmap/btn_desconect"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_led"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="LED"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/btn_desconect"
                    />

                <Button
                    android:clickable="false"
                    android:id="@+id/btn_cubee_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:scaleType="fitXY"
                    android:background="@mipmap/btn_desconect"
                    android:layout_margin="10dp"
                    android:text="BOTÃƒO: OFF"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desconectar"
                android:textSize="20sp"
                android:background="@mipmap/btn_desconect"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>