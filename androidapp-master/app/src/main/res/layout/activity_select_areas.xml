<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/defaultBackground"
        tools:context="com.lacina.cubeeclient.activities.SelectAreasActivity">

        <RelativeLayout
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/currentPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="1/1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"/>


            <Button
                android:id="@+id/stateTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00:00:00"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#996bcae4"
                android:layout_below="@+id/currentPage"
                android:layout_centerHorizontal="true"
                />


            <RelativeLayout
                android:id="@+id/states"
                android:layout_below="@id/stateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp">

                <RadioButton
                    android:id="@+id/btnA1"
                    android:button="@android:color/transparent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="40dp"
                    android:text="@string/number1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:background="@drawable/round_button" />

                <RadioButton
                    android:id="@+id/btnA2"
                    android:button="@android:color/transparent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/btnA1"
                    android:text="@string/number2"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_button" />


                <RadioButton
                    android:id="@+id/btnB1"
                    android:button="@android:color/transparent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toEndOf="@id/btnA1"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="40dp"
                    android:text="@string/number3"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_button" />

                <RadioButton
                    android:id="@+id/btnB2"
                    android:button="@android:color/transparent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@id/btnA2"
                    android:layout_below="@id/btnB1"
                    android:text="@string/number4"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_button"/>


                <RadioButton
                    android:id="@+id/btnC1"
                    android:button="@android:color/transparent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toEndOf="@id/btnB1"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="40dp"
                    android:text="@string/number5"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_button"/>

                <RadioButton
                    android:id="@+id/btnC2"
                    android:button="@android:color/transparent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="40dp"
                    android:layout_below="@id/btnC1"
                    android:layout_toEndOf="@id/btnB2"
                    android:text="@string/number6"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_button"/>

                <RadioButton
                    android:id="@+id/btnD1"
                    android:button="@android:color/transparent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toEndOf="@id/btnC1"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="40dp"
                    android:text="@string/number7"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:background="@drawable/round_button"/>

                <RadioButton
                    android:id="@+id/btnD2"
                    android:button="@android:color/transparent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="40dp"
                    android:layout_below="@id/btnD1"
                    android:layout_toEndOf="@id/btnC2"
                    android:text="@string/number8"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:background="@drawable/round_button"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/finish"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/finish"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"/>

            <ImageButton
                android:id="@+id/delete_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/garbage"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_arrow"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:layout_toStartOf="@id/support"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:layout_toEndOf="@+id/support"
            android:layout_centerVertical="true"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/float_btn_select_areas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_format_list_bulleted_black_36dp" />
    </RelativeLayout>

</ScrollView>
