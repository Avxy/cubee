<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/defaultBackground">

    <TextView
        android:id="@+id/tv_event_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="N"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:textColor="#fff"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@mipmap/img_cubee_signal_off" />

    <TextView
        android:id="@+id/nome_cubee"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Cubee Cafeteira"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff"/>


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="10/05/2017"
            android:textStyle="bold"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="14:00"
            android:textStyle="bold"
            android:textColor="#fff"/>


        <TextView
            android:id="@+id/tv_command"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="activateOrDeactivate"
            android:textStyle="bold"
            android:textColor="#fff"/>

</LinearLayout>