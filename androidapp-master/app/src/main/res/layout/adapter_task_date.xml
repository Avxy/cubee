<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"

   >

    <TextView
        android:id="@+id/tv_event_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="N"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:textColor="#fff"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@mipmap/img_cubee_signal_off" />

    <TextView
        android:id="@+id/nome_cubee"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Cubee Cafeteira"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView


            android:id="@+id/tv_date"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="10/05/2017"
            android:textStyle="bold"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="14:00"
            android:textStyle="bold"
            android:textColor="#fff"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioGroup
            android:id="@+id/rg_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <RadioButton
                android:id="@+id/rbtn_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Ativar"
                android:textColor="#fff"
                android:buttonTint="#fff"
                android:textColorLink="#fff"/>

            <RadioButton
                android:id="@+id/rbtn_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Desativar"
                android:buttonTint="#fff"
                android:textColor="#fff"/>


        </RadioGroup>

        <Button
            android:id="@+id/btn_date"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="Data"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/rg_on_off"/>

        <Button
            android:id="@+id/btn_hour"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_date"
            android:text="Hora"/>

    </RelativeLayout>


</LinearLayout>